<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_background"
    android:orientation="vertical"
    android:paddingLeft="0dp"
    android:paddingRight="0dp">

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size43"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView6"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/border_buycoins"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="@dimen/size22"
            android:layout_height="@dimen/size18"
            app:srcCompat="@mipmap/ic_coin" />

        <com.riddle.common.CustomTextView
            android:id="@+id/textView28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/twenty_coins"
            android:textColor="@color/colorTextWhite"
            android:textSize="@dimen/size_text_14" />

        <TextView
            android:id="@+id/textView31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="@string/one_dollar"
            android:textColor="@color/colorTextWhite"
            android:textSize="@dimen/size_text_14" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout26"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size43"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout16"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/border_buycoins"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView128"
            android:layout_width="@dimen/size22"
            android:layout_height="@dimen/size18"
            app:srcCompat="@mipmap/ic_coin" />

        <com.riddle.common.CustomTextView
            android:id="@+id/textView228"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/one_fifty_coins"
            android:textColor="@color/colorTextWhite"
            android:textSize="@dimen/size_text_14" />

        <TextView
            android:id="@+id/textView321"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="@string/five_dollar"
            android:textColor="@color/colorTextWhite"
            android:textSize="@dimen/size_text_14" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size33"
        android:background="@color/colorBanerPoint">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="@dimen/size16"
            android:layout_height="@dimen/size17"
            android:layout_alignBottom="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/textView"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"
            app:srcCompat="@mipmap/ic_lock" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="@dimen/size22"
            android:layout_height="@dimen/size17"
            android:layout_alignTop="@+id/textView5"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="11dp"
            android:layout_toLeftOf="@+id/textView5"
            android:layout_toStartOf="@+id/textView5"
            app:srcCompat="@mipmap/ic_coin" />

        <com.riddle.common.CustomTextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_toEndOf="@+id/imageView3"
            android:layout_toRightOf="@+id/imageView3"
            android:text="1/10"
            android:textColor="@color/colorTextWhite" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:text="22"
            android:textColor="@color/colorTextWhite"
            android:textSize="@dimen/size_text_14" />
    </RelativeLayout>

    <com.riddle.common.CustomEditText
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:gravity="center_horizontal"
        android:text="@string/buy_coin"
        android:textColor="@color/colorTextWhite"
        android:textSize="@dimen/size_text_18" />

    <LinearLayout
        android:id="@+id/linearLayout16"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size43"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout6"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/border_buycoins"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView118"
            android:layout_width="@dimen/size22"
            android:layout_height="@dimen/size18"
            app:srcCompat="@mipmap/ic_coin" />

        <com.riddle.common.CustomTextView
            android:id="@+id/textView218"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/eithty_coins"
            android:textColor="@color/colorTextWhite"
            android:textSize="@dimen/size_text_14" />

        <TextView
            android:id="@+id/textView311"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="@string/three_dollar"
            android:textColor="@color/colorTextWhite"
            android:textSize="@dimen/size_text_14" />

    </LinearLayout>

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout26"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="102dp" />

</RelativeLayout>