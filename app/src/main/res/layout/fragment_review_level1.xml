<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_background"
    android:orientation="vertical"
    android:paddingLeft="0dp"
    android:paddingRight="0dp">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size42"
        android:layout_below="@+id/customTextView3"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/border_btn_next_level"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="15dp">

        <com.riddle.common.CustomTextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/linearLayout3"
            android:layout_alignLeft="@+id/linearLayout3"
            android:layout_alignStart="@+id/linearLayout3"
            android:paddingRight="10dp"
            android:text="@string/pass_next_level"
            android:textColor="@color/colorTextWhite"
            android:textSize="@dimen/size_text_16" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="@dimen/size29"
            android:layout_height="@dimen/size19"
            app:srcCompat="@mipmap/ic_10" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size33"
        android:background="@color/colorBanerPoint">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="@dimen/size16"
            android:layout_height="@dimen/size17"
            android:layout_alignBottom="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/textView"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"
            app:srcCompat="@mipmap/ic_lock" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="@dimen/size22"
            android:layout_height="@dimen/size17"
            android:layout_alignTop="@+id/textView5"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="11dp"
            android:layout_toLeftOf="@+id/textView5"
            android:layout_toStartOf="@+id/textView5"
            app:srcCompat="@mipmap/ic_coin" />

        <com.riddle.common.CustomTextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_toEndOf="@+id/imageView3"
            android:layout_toRightOf="@+id/imageView3"
            android:text="1/10"
            android:textColor="@color/colorTextWhite" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:text="22"
            android:textColor="@color/colorTextWhite"
            android:textSize="@dimen/size_text_14" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="49dp"
        android:gravity="center_horizontal"
        android:text="Review of level 1"
        android:textColor="@color/colorTextWhite"
        android:textSize="@dimen/size_text_18"
        android:layout_below="@+id/relativeLayout4"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size201"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/border_dialog_green"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="@dimen/size25"
                android:layout_height="@dimen/size25"
                app:srcCompat="@mipmap/ic_pass" />

            <com.riddle.common.CustomTextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:text="@string/riddle1"
                android:textColor="@color/colorTextWhite"
                android:textSize="@dimen/size_text_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="@dimen/size25"
                android:layout_height="@dimen/size25"
                app:srcCompat="@mipmap/ic_not_pass" />

            <com.riddle.common.CustomTextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:text="@string/riddle2"
                android:textColor="@color/colorTextWhite"
                android:textSize="@dimen/size_text_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="@dimen/size25"
                android:layout_height="@dimen/size25"
                app:srcCompat="@mipmap/ic_not_pass" />

            <com.riddle.common.CustomTextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:text="@string/riddle3"
                android:textColor="@color/colorTextWhite"
                android:textSize="@dimen/size_text_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="@dimen/size25"
                android:layout_height="@dimen/size25"
                app:srcCompat="@mipmap/ic_pass" />

            <com.riddle.common.CustomTextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:text="@string/riddle4"
                android:textColor="@color/colorTextWhite"
                android:textSize="@dimen/size_text_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="@dimen/size25"
                android:layout_height="@dimen/size25"
                app:srcCompat="@mipmap/ic_pass" />

            <com.riddle.common.CustomTextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:text="@string/riddle5"
                android:textColor="@color/colorTextWhite"
                android:textSize="@dimen/size_text_14" />
        </LinearLayout>
    </LinearLayout>

    <com.riddle.common.CustomTextView
        android:id="@+id/customTextView3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size42"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/border_lock_the_answer"
        android:gravity="center"
        android:textSize="@dimen/size_text_16"
        android:text="@string/try_again"
        android:textColor="@color/colorTextWhite" />

</RelativeLayout>