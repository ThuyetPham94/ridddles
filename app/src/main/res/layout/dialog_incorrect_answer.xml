<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlackTrans"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingRight="30dp">

    <RelativeLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size114"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="159dp"
        android:background="@drawable/border_dialog_red"
        android:orientation="vertical">

        <com.riddle.common.CustomTextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="2 more changes"
            android:textColor="@color/colorTextWhite"
            android:textSize="@dimen/size_text_14" />

        <com.riddle.common.CustomTextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="@string/incorrect_answer"
            android:textColor="@color/colorRed"
            android:textSize="@dimen/size_text_18" />
    </RelativeLayout>

    <com.riddle.common.CustomTextView
        android:id="@+id/textView17"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size43"
        android:layout_marginTop="14dp"
        android:background="@drawable/border_button_yes"
        android:gravity="center"
        android:text="@string/button_play_next"
        android:textColor="@color/colorTextWhite"
        android:textSize="@dimen/size_text_16"
        android:layout_below="@+id/customTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <com.riddle.common.CustomTextView
        android:id="@+id/customTextView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size43"
        android:layout_marginTop="19dp"
        android:background="@drawable/border_button_yes"
        android:gravity="center"
        android:text="@string/button_try_again"
        android:textColor="@color/colorTextWhite"
        android:textSize="@dimen/size_text_16"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>