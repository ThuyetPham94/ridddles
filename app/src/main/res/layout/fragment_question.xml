<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_background"
    android:orientation="vertical"
    android:paddingLeft="0dp"
    android:paddingRight="0dp">

    <RelativeLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size33"
        android:background="@color/colorBanerPoint">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="@dimen/size16"
            android:layout_height="@dimen/size17"
            android:layout_alignBottom="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/textView"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"
            app:srcCompat="@mipmap/ic_lock" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="@dimen/size22"
            android:layout_height="@dimen/size17"
            android:layout_alignTop="@+id/textView5"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="11dp"
            android:layout_toLeftOf="@+id/textView5"
            android:layout_toStartOf="@+id/textView5"
            app:srcCompat="@mipmap/ic_coin" />

        <com.riddle.common.CustomTextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_toEndOf="@+id/imageView3"
            android:layout_toRightOf="@+id/imageView3"
            android:text="1/10"
            android:textColor="@color/colorTextWhite" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:text="22"
            android:textColor="@color/colorTextWhite"
            android:textSize="@dimen/size_text_14" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:gravity="center_horizontal"
        android:text="Riddle 1/5"
        android:textColor="@color/colorTextWhite"
        android:textSize="@dimen/size_text_18" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="20dp"
        android:duplicateParentState="false"
        android:gravity="center"
        android:text="At some stage during my career at club level and\/ \n or international, I have been team mates with:"
        android:textColor="@color/colorTextWhite"
        android:textSize="@dimen/size_text_14" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size114"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView7"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="62dp"
        android:background="@drawable/border_question"
        android:orientation="horizontal"
        android:weightSum="1">

    </LinearLayout>

    <com.riddle.common.CustomEditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size42"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/border_question"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Messi"
        android:textAlignment="center"
        android:textColor="@color/colorTextWhite"
        android:textSize="@dimen/size_text_14" />

    <com.riddle.common.CustomTextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size42"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/border_lock_the_answer"
        android:gravity="center"
        android:text="@string/lockTheAnswer"
        android:textColor="@color/colorTextWhite" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="@dimen/size87"
        android:layout_height="@dimen/size25"
        android:background="@drawable/border_hint"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:layout_below="@+id/textView8"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:layout_marginTop="27dp">

        <com.riddle.common.CustomTextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/linearLayout3"
            android:layout_alignLeft="@+id/linearLayout3"
            android:layout_alignStart="@+id/linearLayout3"
            android:paddingRight="10dp"
            android:text="@string/hint"
            android:textColor="@color/colorTextWhite"
            android:textSize="@dimen/size_text_14" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="@dimen/size21"
            android:layout_height="@dimen/size17"
            app:srcCompat="@mipmap/ic_2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/size116"
        android:layout_height="@dimen/size25"
        android:layout_alignEnd="@+id/textView8"
        android:layout_alignRight="@+id/textView8"
        android:layout_alignTop="@+id/linearLayout3"
        android:background="@drawable/border_super_hint"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/size10"
        android:paddingRight="10dp">

        <com.riddle.common.CustomTextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/super_hint"
            android:textColor="@color/colorTextWhite"
            android:textSize="@dimen/size_text_14" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="@dimen/size26"
            android:layout_height="@dimen/size17"
            android:layout_weight="1"
            app:srcCompat="@mipmap/ic_4" />
    </LinearLayout>

</RelativeLayout>